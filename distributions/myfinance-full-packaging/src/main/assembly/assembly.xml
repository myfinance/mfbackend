<assembly
        xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
    <id>bin</id>
    <formats>
        <format>zip</format>
    </formats>

    <includeBaseDirectory>false</includeBaseDirectory>

    <fileSets>
        <!--libs for the runner -->
        <fileSet>
            <outputDirectory>lib</outputDirectory>
            <directory>${project.build.directory}/../../run-job/target/lib</directory>
            <includes>
                <include>*</include>
            </includes>
        </fileSet>

        <!--runner -->
        <fileSet>
            <outputDirectory></outputDirectory>
            <directory>${project.build.directory}/../../run-job/target</directory>

            <includes>
                <include>run*</include>
            </includes>
        </fileSet>

        <!--karaf -->
        <fileSet>
            <outputDirectory>karaf</outputDirectory>
            <directory>${project.build.directory}/../../karaf-full/target/assembly</directory>

            <includes>
                <include>**/*</include>
            </includes>
        </fileSet>

        <!--Database-Scripts-->
        <fileSet>
            <outputDirectory>database</outputDirectory>
            <directory>${project.build.scriptSourceDirectory}/../../../../../database/</directory>
            <includes>
                <include>**/*</include>
            </includes>
            <fileMode>0755</fileMode>
            <lineEnding>unix</lineEnding>
        </fileSet>

    </fileSets>


</assembly>