<assembly
        xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
    <id>bin</id>

    <formats>
        <format>zip</format>
        <format>tar.gz</format>
    </formats>

    <includeBaseDirectory>false</includeBaseDirectory>

    <fileSets>
        <!--libs for the runner -->
        <fileSet>
            <outputDirectory>MyFinance-${pom.version}/lib</outputDirectory>
            <directory>${project.build.directory}/../../run-job/target/lib</directory>
            <includes>
                <include>*</include>
            </includes>
        </fileSet>

        <!--runner -->
        <fileSet>
            <outputDirectory>MyFinance-${pom.version}</outputDirectory>
            <directory>${project.build.directory}/../../run-job/target</directory>

            <includes>
                <include>run*</include>
            </includes>
        </fileSet>

        <!--karaf -->
        <fileSet>
            <outputDirectory>MyFinance-${pom.version}/karaf</outputDirectory>
            <directory>${project.build.directory}/../../karaf-full/target/assembly</directory>

            <includes>
                <include>**/*</include>
            </includes>
        </fileSet>

        <!--Database-Scripts-->
        <fileSet>
            <outputDirectory>MyFinance-${pom.version}/database/changelog</outputDirectory>
            <directory>${project.build.directory}/../../../Database/changelog</directory>
            <includes>
                <include>**/*</include>
            </includes>
            <fileMode>0755</fileMode>
            <lineEnding>unix</lineEnding>
        </fileSet>

        <!--Database-Jars-->
        <fileSet>
            <outputDirectory>MyFinance-${pom.version}/database</outputDirectory>
            <directory>${project.build.outputDirectory}</directory>
            <includes>
                <include>postgres*.jar</include>
                <include>liquibase*.jar</include>
            </includes>
        </fileSet>

        <!--Liquibase-scripts-->
        <fileSet>
            <outputDirectory>MyFinance-${pom.version}/database</outputDirectory>
            <directory>${project.build.directory}/../../../Database/scripts</directory>
            <includes>
                <include>liquibase</include>
                <include>dac_liquibase</include>
            </includes>
            <fileMode>0755</fileMode>
            <lineEnding>unix</lineEnding>
        </fileSet>
        <fileSet>
            <outputDirectory>MyFinance-${pom.version}/database</outputDirectory>
            <directory>${project.build.directory}/../../../Database/scripts</directory>
            <includes>
                <include>dac_liquibase.cmd</include>
                <include>liquibase.bat</include>
            </includes>
        </fileSet>

    </fileSets>


</assembly>