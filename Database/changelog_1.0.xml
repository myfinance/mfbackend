<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
  xmlns="http://www.liquibase.org/xml/ns/dbchangelog/1.9"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog/1.9
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-1.9.xsd">
    <preConditions>
        <or>
            <dbms type="postgresql" />
            <dbms type="h2" />
        </or>
    </preConditions>    
    <changeSet id="1.0.1" author="hf">
        <createTable tableName="dacenvironmentconfiguration">
            <column name="environment" type="VARCHAR(20)">
                <constraints nullable="false"/>
            </column>
            <column name="target" type="VARCHAR(20)">
                <constraints nullable="false"/>
            </column>
            <column name="envtype" type="VARCHAR(25)">
                <constraints nullable="false"/>
            </column>
            <column name="identifier" type="VARCHAR(40)">
                <constraints nullable="false"/>
            </column>
            <column name="jdbcurl" type="VARCHAR(100)"/>
            <column name="jndiurl" type="VARCHAR(50)"/>
        </createTable>
        <addPrimaryKey columnNames="environment, target"
                       constraintName="pk_envconv"
                       tableName="dacenvironmentconfiguration"/>
    </changeSet>
    <changeSet id="1.0.2" author="hf">
        <createTable tableName="restauthorization">
            <column name="restApp" type="VARCHAR(25)">
                <constraints nullable="false"/>
            </column>
            <column name="resource" type="VARCHAR(25)">
                <constraints nullable="false"/>
            </column>
            <column name="operationType" type="VARCHAR(10)">
                <constraints nullable="false"/>
            </column>
            <column name="restIdPattern" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="permissions" type="VARCHAR(200)">
                <constraints nullable="false"/>
            </column>
            <column name="description" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>
            <column name="operations" type="VARCHAR(200)">
                <constraints nullable="false"/>
            </column>
            <column name="users" type="VARCHAR(200)">
                <constraints nullable="false"/>
            </column>

        </createTable>
        <addPrimaryKey columnNames="restApp, resource, restIdPattern, restOpType, operations"
                       constraintName="pk_restauth"
                       tableName="restauthorization"/>
    </changeSet>
</databaseChangeLog>
